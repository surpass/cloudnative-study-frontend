<!--pages/home/index.wxml-->
<!--轮播图-->
<swiper indicator-dots circular>
  <swiper-item wx:for="{{swiperList}}" wx:key="id">
    <image src="{{item.image}}"></image>
  </swiper-item>
</swiper>

<!--九宫格区-->
<view class="grid-list">  
  <navigator class="grid-item" url="/pages/my_module/networkSpeed/networkSpeed">
    <image src="/images/home/0.png"></image>
    <text>网速测试</text>
  </navigator>
  <navigator class="grid-item" url="/pages/my_module/calc/index">
    <image src="/images/home/1.png"></image>
    <text>计算器</text>
  </navigator>
  <navigator class="grid-item" url="/pages/my_module/life_time/life_time">
    <image src="/images/home/3.png"></image>
    <text>一生时间</text>
  </navigator>
  <navigator class="grid-item" url="/pages/my_module/calc_size/index">
    <image src="/images/home/4.png"></image>
    <text>尺码计算</text>
  </navigator>
  <navigator class="grid-item" url="/pages/my_module/blind/blind">
    <image src="/images/home/5.png"></image>
    <text>色盲测试</text>
  </navigator>
  <navigator class="grid-item" url="/pages/my_module/bmi/bmi">
    <image src="/images/home/6.png"></image>
    <text>BMI计算器</text>
  </navigator>
  <navigator class="grid-item" url="/pages/my_module/eat/index">
    <image src="/images/home/7.png"></image>
    <text>今天吃什么</text>
  </navigator>
  <navigator class="grid-item" url="/pages/my_module/phone/phone">
    <image src="/images/home/8.png"></image>
    <text>常用号码</text>
  </navigator>
  <navigator class="grid-item" url="/pages/tools/index">
    <image src="/images/home/9.png"></image>
    <text>更多</text>
  </navigator>
  
</view>
<!-- 底部图片区-->
<navigator class="img-box" url="/pages/map/map">
  <image src="/images/link-01.png" mode="widthFix"></image>
  <image src="/images/link-02.png"  mode="widthFix"></image>
</navigator>